<% layout("/layouts/boilerplate") -%>

  <body>
    <h3>All Listing</h3>
    <!-- <form action="/listings/new" method="GET">
    <button>new create listing</button>
   </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-0.1">
      <% for(let listing of allListings){ %>
        <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card col" style="width: 18rem;" >
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
          <div class="card-img-overlay">abc</div>
          <div class="card-body">
            <p class="card-text">
              <%= listing.title %><br>
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : 'price is not right'%>/night
            </p>
          </div>
        </div>
        </a>
        <% } %>
    </div>

  </body>